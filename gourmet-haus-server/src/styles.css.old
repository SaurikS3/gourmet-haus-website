/* ============================================
   LUXURIOUS LOADING SCREEN
   ============================================ */
.loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: linear-gradient(135deg, var(--deep-black) 0%, var(--warm-black) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    opacity: 1;
    visibility: visible;
    transition: opacity 1s ease-out, visibility 1s ease-out;
}

.loading-screen.hidden {
    opacity: 0;
    visibility: hidden;
}

.loading-content {
    text-align: center;
    padding: 2rem;
    max-width: 600px;
}

.logo-container {
    margin-bottom: 3rem;
    animation: logoReveal 2s ease-out;
}

@keyframes logoReveal {
    0% {
        opacity: 0;
        transform: scale(0.8) translateY(-30px);
    }
    60% {
        opacity: 1;
        transform: scale(1.05) translateY(0);
    }
    100% {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}

.loading-logo {
    width: 100%;
    max-width: 400px;
    height: auto;
    filter: drop-shadow(0 0 40px rgba(212, 175, 55, 0.4));
    animation: logoGlow 3s ease-in-out infinite;
}

@keyframes logoGlow {
    0%, 100% {
        filter: drop-shadow(0 0 40px rgba(212, 175, 55, 0.4));
    }
    50% {
        filter: drop-shadow(0 0 60px rgba(212, 175, 55, 0.7));
    }
}

.loading-ornament {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
    opacity: 0;
    animation: ornamentFadeIn 1s ease-out 0.5s forwards;
}

@keyframes ornamentFadeIn {
    to {
        opacity: 1;
    }
}

.ornament-dot {
    width: 4px;
    height: 4px;
    background: var(--champagne-gold);
    border-radius: 50%;
    box-shadow: 0 0 10px var(--champagne-gold);
    animation: dotPulse 2s ease-in-out infinite;
}

@keyframes dotPulse {
    0%, 100% {
        opacity: 0.5;
        transform: scale(1);
    }
    50% {
        opacity: 1;
        transform: scale(1.3);
    }
}

.ornament-line {
    width: 80px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--champagne-gold), transparent);
}

.ornament-diamond {
    font-size: 1.5rem;
    color: var(--champagne-gold);
    text-shadow: 0 0 20px var(--champagne-gold);
    animation: diamondSpin 4s linear infinite;
}

@keyframes diamondSpin {
    0%, 100% {
        transform: rotate(0deg) scale(1);
    }
    50% {
        transform: rotate(180deg) scale(1.2);
    }
}

.loading-text {
    font-family: var(--font-display);
    font-size: clamp(0.75rem, 1.8vw, 1.1rem);
    font-weight: 600;
    letter-spacing: 0.3em;
    color: var(--platinum);
    margin: 2rem 0;
    display: flex;
    justify-content: center;
    flex-wrap: nowrap;
    gap: 0.3rem;
    white-space: nowrap;
}

.loading-letter {
    display: inline-block;
    opacity: 0;
    animation: letterReveal 0.5s ease-out forwards;
}

.loading-letter:nth-child(1) { animation-delay: 0.8s; }
.loading-letter:nth-child(2) { animation-delay: 0.9s; }
.loading-letter:nth-child(3) { animation-delay: 1.0s; }
.loading-letter:nth-child(4) { animation-delay: 1.1s; }
.loading-letter:nth-child(5) { animation-delay: 1.2s; }
.loading-letter:nth-child(6) { animation-delay: 1.3s; }
.loading-letter:nth-child(7) { animation-delay: 1.4s; }
.loading-letter:nth-child(8) { animation-delay: 1.5s; }
.loading-letter:nth-child(9) { animation-delay: 1.6s; }
.loading-letter:nth-child(11) { animation-delay: 1.7s; }
.loading-letter:nth-child(12) { animation-delay: 1.8s; }
.loading-letter:nth-child(13) { animation-delay: 1.9s; }
.loading-letter:nth-child(14) { animation-delay: 2.0s; }
.loading-letter:nth-child(16) { animation-delay: 2.1s; }
.loading-letter:nth-child(17) { animation-delay: 2.2s; }
.loading-letter:nth-child(18) { animation-delay: 2.3s; }
.loading-letter:nth-child(19) { animation-delay: 2.4s; }
.loading-letter:nth-child(20) { animation-delay: 2.5s; }
.loading-letter:nth-child(21) { animation-delay: 2.6s; }
.loading-letter:nth-child(22) { animation-delay: 2.7s; }
.loading-letter:nth-child(23) { animation-delay: 2.8s; }
.loading-letter:nth-child(24) { animation-delay: 2.9s; }
.loading-letter:nth-child(25) { animation-delay: 3.0s; }

@keyframes letterReveal {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

.loading-space {
    display: inline-block;
    width: 0.5rem;
}

.loading-progress {
    width: 100%;
    max-width: 400px;
    height: 3px;
    background: rgba(212, 175, 55, 0.1);
    border-radius: 10px;
    margin: 3rem auto 0;
    overflow: hidden;
    opacity: 0;
    animation: progressFadeIn 0.5s ease-out 1s forwards;
}

@keyframes progressFadeIn {
    to {
        opacity: 1;
    }
}

.progress-bar {
    height: 100%;
    background: linear-gradient(90deg, 
        var(--champagne-gold) 0%, 
        var(--rose-gold) 50%, 
        var(--champagne-gold) 100%);
    background-size: 200% 100%;
    width: 0;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.6);
    animation: progressFill 3s ease-out 1.2s forwards,
               progressGlow 2s ease-in-out 1.2s infinite;
}

@keyframes progressFill {
    to {
        width: 100%;
    }
}

@keyframes progressGlow {
    0%, 100% {
        background-position: 0% 50%;
        box-shadow: 0 0 20px rgba(212, 175, 55, 0.6);
    }
    50% {
        background-position: 100% 50%;
        box-shadow: 0 0 30px rgba(212, 175, 55, 0.9);
    }
}

/* Loading screen responsive adjustments */
@media (max-width: 768px) {
    .loading-logo {
        max-width: 300px;
    }
    
    .loading-text {
        font-size: 0.65rem;
