.login-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 2;
}

.login-ornament {
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--champagne-gold), transparent);
    margin: 0 auto 2rem;
    position: relative;
}

.login-ornament::before,
.login-ornament::after {
    content: 'â—†';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: var(--champagne-gold);
    font-size: 0.75rem;
    text-shadow: 0 0 15px var(--champagne-gold);
}

.login-ornament::before { left: -15px; }
.login-ornament::after { right: -15px; }

.login-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 2.75rem);
    font-weight: 900;
    color: var(--champagne-gold);
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
    text-shadow: 0 0 30px rgba(212, 175, 55, 0.4);
}

.login-subtitle {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--platinum);
    letter-spacing: 0.1em;
    opacity: 0.9;
}

.login-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: 2.5rem 0;
    position: relative;
    z-index: 2;
}

.divider-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--champagne-gold), transparent);
}

.divider-text {
    font-family: var(--font-display);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--champagne-gold);
    text-transform: uppercase;
}

.login-form {
    position: relative;
    z-index: 2;
}

.google-sign-in-btn {
    width: 100%;
    padding: 1.25rem 2rem;
    background: linear-gradient(135deg, 
        rgba(212, 175, 55, 0.95) 0%, 
        rgba(183, 110, 121, 0.95) 100%);
    border: 2px solid var(--champagne-gold);
    border-radius: 50px;
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--pearl-white);
    cursor: pointer;
    transition: all 0.4s var(--ease-smooth);
    box-shadow: 
        0 10px 30px rgba(0, 0, 0, 0.4),
        0 0 30px rgba(212, 175, 55, 0.3);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    position: relative;
    overflow: hidden;
}

.google-sign-in-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        transparent 0%, 
        rgba(255, 255, 255, 0.3) 50%, 
        transparent 100%);
    transition: left 0.6s var(--ease-luxury);
}

.google-sign-in-btn:hover::before {
    left: 100%;
}

.google-sign-in-btn:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 
        0 15px 40px rgba(0, 0, 0, 0.5),
        0 0 50px rgba(212, 175, 55, 0.6);
    border-color: var(--pearl-white);
}

.google-sign-in-btn:active {
    transform: translateY(-1px) scale(1);
}

.google-icon {
    width: 20px;
    height: 20px;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

.login-features {
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(212, 175, 55, 0.2);
    position: relative;
    z-index: 2;
}

.features-title {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--champagne-gold);
    text-align: center;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
}

.features-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--platinum);
    opacity: 0.85;
}

.feature-icon {
    color: var(--champagne-gold);
    font-size: 1.25rem;
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
}

/* ============================================
   PROFILE PAGE STYLES
   ============================================ */
.profile-page {
    min-height: 100vh;
    padding: 120px 2rem 4rem;
    background: var(--deep-black);
    position: relative;
}

.profile-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
}

.profile-welcome {
    text-align: center;
    margin-bottom: 4rem;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, 
        rgba(26, 26, 26, 0.7) 0%,
        rgba(42, 37, 32, 0.5) 100%);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
}

.welcome-ornament {
    width: 120px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--champagne-gold), transparent);
    margin: 0 auto 2rem;
    position: relative;
}

.welcome-ornament::before,
.welcome-ornament::after {
    content: 'â—†';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: var(--champagne-gold);
    font-size: 0.875rem;
    text-shadow: 0 0 20px var(--champagne-gold);
}

.welcome-ornament::before { left: -20px; }
.welcome-ornament::after { right: -20px; }

.welcome-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 900;
    color: var(--champagne-gold);
    letter-spacing: 0.15em;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 30px rgba(212, 175, 55, 0.4);
}

.welcome-subtitle {
    font-family: var(--font-body);
    font-size: 1.25rem;
    color: var(--platinum);
    letter-spacing: 0.05em;
    opacity: 0.9;
}

.profile-content {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 3rem;
}

.profile-sidebar {
    position: sticky;
    top: 100px;
    height: fit-content;
}

.profile-nav {
    background: linear-gradient(135deg, 
        rgba(26, 26, 26, 0.9) 0%,
        rgba(42, 37, 32, 0.8) 100%);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
}

.nav-item {
    padding: 1rem 1.5rem;
    margin-bottom: 0.5rem;
    border-radius: 12px;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--platinum);
    cursor: pointer;
    transition: all 0.3s var(--ease-luxury);
    border: 1px solid transparent;
}

.nav-item:hover {
    background: rgba(212, 175, 55, 0.1);
    border-color: rgba(212, 175, 55, 0.3);
    color: var(--champagne-gold);
    transform: translateX(5px);
}

.nav-item.active {
    background: linear-gradient(135deg, 
        rgba(212, 175, 55, 0.2) 0%,
        rgba(183, 110, 121, 0.2) 100%);
    border-color: var(--champagne-gold);
    color: var(--champagne-gold);
    box-shadow: 0 5px 20px rgba(212, 175, 55, 0.2);
}

.profile-main {
    min-height: 500px;
}

.profile-section {
    background: linear-gradient(135deg, 
        rgba(26, 26, 26, 0.9) 0%,
        rgba(42, 37, 32, 0.8) 100%);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    display: none;
}

.profile-section.active {
    display: block;
    animation: sectionFadeIn 0.5s ease-out;
}

@keyframes sectionFadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.section-header-profile {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(212, 175, 55, 0.2);
}

.section-title-profile {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--champagne-gold);
    letter-spacing: 0.1em;
}

.form-actions {
    display: flex;
    gap: 1rem;
}

.btn-edit,
.btn-save,
.btn-cancel,
.btn-sign-out {
    padding: 0.75rem 2rem;
    border-radius: 50px;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    cursor: pointer;
    transition: all 0.3s var(--ease-luxury);
    border: 2px solid;
}

.btn-edit,
.btn-save {
    background: linear-gradient(135deg, var(--champagne-gold), var(--rose-gold));
    border-color: var(--champagne-gold);
    color: var(--pearl-white);
    box-shadow: 0 5px 20px rgba(212, 175, 55, 0.3);
}

.btn-edit:hover,
.btn-save:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(212, 175, 55, 0.5);
}

.btn-cancel {
    background: transparent;
    border-color: var(--platinum);
    color: var(--platinum);
}

.btn-cancel:hover {
    background: rgba(229, 228, 226, 0.1);
    transform: translateY(-3px);
}

.btn-sign-out {
    background: transparent;
    border-color: var(--burgundy);
    color: var(--burgundy);
}

.btn-sign-out:hover {
    background: rgba(128, 0, 32, 0.2);
    transform: translateY(-3px);
    box-shadow: 0 5px 20px rgba(128, 0, 32, 0.3);
}

.form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.form-group-profile {
    margin-bottom: 2rem;
}

.form-label-profile {
    display: block;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--champagne-gold);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
}

.form-input-profile {
    width: 100%;
    padding: 1rem;
    background: rgba(26, 26, 26, 0.6);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 12px;
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--pearl-white);
    transition: all 0.3s var(--ease-luxury);
}

.form-input-profile:focus {
    outline: none;
    border-color: var(--champagne-gold);
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.2);
}

.form-input-profile:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.empty-state {
    text-align: center;
    padding: 4rem 2rem;
}

.empty-icon {
    font-size: 4rem;
    color: var(--champagne-gold);
    opacity: 0.3;
    margin-bottom: 1.5rem;
}

.empty-text {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--platinum);
    opacity: 0.7;
}

.order-list,
.favorites-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.order-item,
.favorite-item {
    padding: 2rem;
    background: rgba(26, 26, 26, 0.5);
    border: 1px solid rgba(212, 175, 55, 0.15);
    border-radius: 16px;
    transition: all 0.3s var(--ease-luxury);
}

.order-item:hover,
.favorite-item:hover {
    border-color: rgba(212, 175, 55, 0.4);
    transform: translateX(5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.preferences-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.5rem;
}

.preference-tag {
    padding: 1.25rem;
    background: rgba(26, 26, 26, 0.6);
    border: 2px solid rgba(212, 175, 55, 0.2);
    border-radius: 16px;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--platinum);
    cursor: pointer;
    transition: all 0.3s var(--ease-luxury);
    text-align: center;
    text-transform: uppercase;
}

.preference-tag:hover {
    border-color: rgba(212, 175, 55, 0.5);
    transform: translateY(-3px);
}

.preference-tag.active {
    background: linear-gradient(135deg, 
        rgba(212, 175, 55, 0.3) 0%,
        rgba(183, 110, 121, 0.3) 100%);
    border-color: var(--champagne-gold);
    color: var(--champagne-gold);
    box-shadow: 0 5px 20px rgba(212, 175, 55, 0.3);
}

/* Responsive adjustments */
@media (max-width: 1024px) {
    .profile-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .profile-sidebar {
        position: static;
    }
    
    .profile-nav {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        padding: 1.5rem;
    }
    
    .nav-item {
        padding: 1rem;
        margin-bottom: 0;
        text-align: center;
    }
}

@media (max-width: 768px) {
    .profile-page {
        padding: 100px 1.5rem 3rem;
    }
    
    .profile-welcome {
        padding: 2rem 1.5rem;
    }
    
    .profile-section {
        padding: 2rem 1.5rem;
    }
    
    .section-header-profile {
        flex-direction: column;
        align-items: flex-start;
        gap: 1.5rem;
    }
    
    .form-actions {
        width: 100%;
        flex-direction: column;
    }
    
    .btn-edit,
    .btn-save,
    .btn-cancel,
    .btn-sign-out {
        width: 100%;
    }
    
    .form-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .preferences-grid {
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 1rem;
    }
    
    .login-card {
        padding: 3rem 2rem;
    }
}

@media (max-width: 480px) {
    .profile-welcome {
        padding: 1.5rem 1rem;
    }
    
    .profile-section {
        padding: 1.5rem 1rem;
    }
    
    .login-card {
        padding: 2rem 1.5rem;
    }
    
    .login-features {
        margin-top: 2rem;
        padding-top: 2rem;
    }
    
    .preferences-grid {
        grid-template-columns: 1fr;
    }
}

/* ============================================
   ACCESSIBILITY & PERFORMANCE
   ============================================ */
@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
    
    .menu-section {
        opacity: 1;
        transform: none;
    }
}

/* Focus states for accessibility */
a:focus,
button:focus {
    outline: 2px solid var(--champagne-gold);
    outline-offset: 4px;
}

/* Print styles */
@media print {
    .luxury-nav,
    .gradient-orbs,
    #particles-canvas,
    .scroll-indicator {
        display: none;
    }
    
    .menu-item {
        break-inside: avoid;
        border: 1px solid #ddd;
        background: white;
        color: black;
    }
}

/* ============================================
   LUXURIOUS CONTACT FORM SECTION
   ============================================ */
.contact-section {
    position: relative;
    padding: var(--space-2xl) 0;
    margin-top: var(--space-2xl);
    background: linear-gradient(135deg, 
        rgba(26, 26, 26, 0.8) 0%,
        rgba(42, 37, 32, 0.6) 50%,
        rgba(26, 26, 26, 0.8) 100%);
    backdrop-filter: blur(30px);
    border-top: 1px solid var(--glass-border);
    border-bottom: 1px solid var(--glass-border);
    overflow: hidden;
}

.contact-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 30%, rgba(212, 175, 55, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(183, 110, 121, 0.08) 0%, transparent 50%);
    pointer-events: none;
    z-index: 1;
}

.contact-container {
    position: relative;
    z-index: 2;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
}

.contact-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 2rem 0;
}

.contact-title {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.contact-title .title-main {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    color: var(--champagne-gold);
    letter-spacing: 0.2em;
    text-shadow: 0 0 30px rgba(212, 175, 55, 0.4);
}

.contact-title .title-subtitle {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 400;
    color: var(--platinum);
    letter-spacing: 0.2em;
    font-style: italic;
}

.contact-form {
    background: linear-gradient(135deg, 
        rgba(26, 26, 26, 0.7) 0%,
        rgba(42, 37, 32, 0.5) 100%);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 24px;
    padding: 3rem;
    box-shadow: 
        0 20px 60px rgba(0, 0, 0, 0.4),
        inset 0 1px 0 rgba(212, 175, 55, 0.1);
    position: relative;
    overflow: hidden;
}

.contact-form::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.03) 0%, transparent 70%);
    pointer-events: none;
    animation: formGlow 8s ease-in-out infinite;
}

@keyframes formGlow {
    0%, 100% {
        transform: translate3d(0, 0, 0);
    }
    50% {
        transform: translate3d(30px, 30px, 0);
    }
}

.form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
}

.form-group {
    position: relative;
    margin-bottom: 2rem;
}

.form-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--champagne-gold);
    text-transform: uppercase;
}

.label-text {
    flex: 1;
}

.label-ornament {
    font-size: 0.75rem;
    color: var(--champagne-gold);
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
    animation: ornamentPulse 3s ease-in-out infinite;
}

@keyframes ornamentPulse {
    0%, 100% {
        opacity: 0.6;
        transform: scale(1);
    }
    50% {
        opacity: 1;
        transform: scale(1.2);
    }
}

.form-input,
.form-textarea {
    width: 100%;
    padding: 1rem 0;
    background: transparent;
    border: none;
    border-bottom: 2px solid rgba(212, 175, 55, 0.2);
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--pearl-white);
    letter-spacing: 0.02em;
    transition: all 0.4s var(--ease-luxury);
    outline: none;
}

.form-input::placeholder,
.form-textarea::placeholder {
    color: rgba(229, 228, 226, 0.4);
    font-style: italic;
}

.form-input:focus,
.form-textarea:focus {
    border-bottom-color: var(--champagne-gold);
}

.form-input:focus + .input-underline,
.form-textarea:focus + .input-underline {
    transform: scaleX(1);
}

.input-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, 
        transparent 0%, 
        var(--champagne-gold) 50%, 
        transparent 100%);
    transform: scaleX(0);
    transition: transform 0.4s var(--ease-luxury);
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.6);
}

.form-textarea {
    resize: vertical;
    min-height: 120px;
    padding-top: 0.75rem;
}

.form-submit-container {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
}

.form-submit-btn {
    position: relative;
    padding: 1.25rem 4rem;
    background: linear-gradient(135deg, 
        rgba(212, 175, 55, 0.9) 0%, 
        rgba(183, 110, 121, 0.9) 100%);
    border: 2px solid var(--champagne-gold);
    border-radius: 50px;
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--pearl-white);
    cursor: pointer;
    overflow: hidden;
    transition: all 0.4s var(--ease-smooth);
    box-shadow: 
        0 10px 30px rgba(0, 0, 0, 0.4),
        0 0 30px rgba(212, 175, 55, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.form-submit-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        transparent 0%, 
        rgba(255, 255, 255, 0.3) 50%, 
        transparent 100%);
    transition: left 0.6s var(--ease-luxury);
}

.form-submit-btn:hover::before {
    left: 100%;
}

.form-submit-btn:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 
        0 15px 40px rgba(0, 0, 0, 0.5),
        0 0 50px rgba(212, 175, 55, 0.6),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    border-color: var(--pearl-white);
}

.form-submit-btn:active {
    transform: translateY(-2px) scale(1.02);
}

.btn-text {
    position: relative;
    z-index: 2;
}

.btn-ornament {
    margin-left: 0.75rem;
    font-size: 1rem;
    animation: btnOrnamentSpin 4s linear infinite;
}

@keyframes btnOrnamentSpin {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

.btn-shine {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, 
        transparent 0%, 
        rgba(255, 255, 255, 0.1) 50%, 
        transparent 100%);
    transform: translateX(-100%);
    animation: btnShine 3s ease-in-out infinite;
    pointer-events: none;
}

@keyframes btnShine {
    0%, 100% {
        transform: translateX(-100%);
    }
    50% {
        transform: translateX(100%);
    }
}

.form-message {
    margin-top: 2rem;
    padding: 1rem 2rem;
    border-radius: 12px;
    font-family: var(--font-body);
    font-size: 1rem;
    text-align: center;
    letter-spacing: 0.05em;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.4s var(--ease-smooth);
}

.form-message.visible {
    opacity: 1;
    transform: translateY(0);
}

.form-message.success {
    background: rgba(45, 80, 22, 0.3);
    border: 1px solid rgba(45, 80, 22, 0.5);
    color: #90ee90;
}

.form-message.error {
    background: rgba(128, 0, 32, 0.3);
    border: 1px solid rgba(128, 0, 32, 0.5);
    color: #ff6b6b;
}

/* Loading state for submit button */
.form-submit-btn.loading {
    pointer-events: none;
    opacity: 0.7;
}

.form-submit-btn.loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    border: 2px solid var(--pearl-white);
    border-top-color: transparent;
    border-radius: 50%;
    animation: btnSpinner 0.8s linear infinite;
}

@keyframes btnSpinner {
    to {
        transform: translate(-50%, -50%) rotate(360deg);
    }
}

/* Responsive adjustments for contact form */
@media (max-width: 768px) {
    .contact-section {
        padding: var(--space-xl) 0;
    }
    
    .contact-container {
        padding: 0 1.5rem;
    }
    
    .contact-header {
        flex-direction: column;
        gap: 1.5rem;
        padding: 1.5rem 0;
    }
    
    .contact-form {
        padding: 2rem 1.5rem;
        border-radius: 20px;
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-input,
    .form-textarea {
        font-size: 1rem;
        padding: 0.875rem 0;
    }
    
    .form-submit-btn {
        padding: 1rem 3rem;
        font-size: 0.875rem;
        width: 100%;
    }
    
    .form-message {
        font-size: 0.9375rem;
        padding: 0.875rem 1.5rem;
    }
}

@media (max-width: 480px) {
    .contact-section {
        padding: 3rem 0;
    }
    
    .contact-container {
        padding: 0 1rem;
    }
    
    .contact-header {
        padding: 1rem 0;
    }
    
    .contact-title .title-main {
        font-size: clamp(1.5rem, 8vw, 2rem);
        letter-spacing: 0.15em;
    }
    
    .contact-title .title-subtitle {
        font-size: clamp(0.875rem, 4vw, 1rem);
        letter-spacing: 0.15em;
    }
    
    .contact-form {
        padding: 1.5rem 1rem;
        border-radius: 16px;
    }
    
    .form-label {
        font-size: 0.75rem;
    }
    
    .form-input,
    .form-textarea {
        font-size: 0.9375rem;
    }
    
    .form-textarea {
        min-height: 100px;
    }
    
    .form-submit-btn {
        padding: 0.875rem 2.5rem;
        font-size: 0.8125rem;
        letter-spacing: 0.15em;
    }
    
    .btn-ornament {
        font-size: 0.875rem;
    }
}

/* Landscape mode optimization for contact form */
@media (max-height: 600px) and (orientation: landscape) {
    .contact-section {
        padding: 2rem 0;
    }
    
    .contact-header {
        padding: 1rem 0;
        margin-bottom: 2rem;
    }
    
    .form-group {
        margin-bottom: 1rem;
    }
    
    .form-textarea {
        min-height: 80px;
    }
    
    .form-submit-container {
        margin-top: 2rem;
    }
}
