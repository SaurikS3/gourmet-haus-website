/* ============================================
   GOURMET HAUS - ULTRA-LUXURY DESIGN SYSTEM
   A Revolutionary Dining Experience
   ============================================ */

/* ============================================
   CSS RESET & BASE CONFIGURATION
   ============================================ */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Luxury Color Palette */
    --deep-black: #0a0a0a;
    --rich-black: #1a1a1a;
    --warm-black: #2a2520;
    --champagne-gold: #d4af37;
    --rose-gold: #b76e79;
    --platinum: #e5e4e2;
    --pearl-white: #f8f6f0;
    --burgundy: #800020;
    --forest-green: #2d5016;
    --midnight-blue: #191970;
    
    /* Glass Morphism */
    --glass-bg: rgba(255, 255, 255, 0.03);
    --glass-border: rgba(212, 175, 55, 0.15);
    --glass-shadow: rgba(0, 0, 0, 0.3);
    
    /* Typography */
    --font-display: 'Cinzel', 'Playfair Display', serif;
    --font-body: 'Cormorant Garamond', serif;
    --font-accent: 'Playfair Display', serif;
    
    /* Spacing System */
    --space-xs: 0.5rem;
    --space-sm: 1rem;
    --space-md: 1.5rem;
    --space-lg: 2.5rem;
    --space-xl: 4rem;
    --space-2xl: 6rem;
    
    /* Animation Curves */
    --ease-luxury: cubic-bezier(0.4, 0, 0.2, 1);
    --ease-smooth: cubic-bezier(0.16, 1, 0.3, 1);
    --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* ============================================
   GLOBAL STYLES
   ============================================ */
html {
    scroll-behavior: smooth;
    overflow-x: hidden;
}

body {
    font-family: var(--font-body);
    color: var(--pearl-white);
    background: var(--deep-black);
    line-height: 1.8;
    font-weight: 400;
    overflow-x: hidden;
    position: relative;
    letter-spacing: 0.02em;
}

/* ============================================
   PARTICLE CANVAS BACKGROUND
   ============================================ */
#particles-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    opacity: 0.3;
    will-change: auto;
}

/* ============================================
   ANIMATED GRADIENT ORBS
   ============================================ */
.gradient-orbs {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
}

.orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.12;
    animation: orbFloat 25s ease-in-out infinite;
    will-change: transform;
}

.orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--champagne-gold), transparent);
    top: -200px;
    left: -200px;
    animation-delay: 0s;
}

.orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--rose-gold), transparent);
    bottom: -150px;
    right: -150px;
    animation-delay: 7s;
}

.orb-3 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--burgundy), transparent);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 14s;
}

@keyframes orbFloat {
    0%, 100% {
        transform: translate3d(0, 0, 0) scale(1);
    }
    33% {
        transform: translate3d(80px, -80px, 0) scale(1.08);
    }
    66% {
        transform: translate3d(-60px, 60px, 0) scale(0.92);
    }
}

/* ============================================
   LUXURY NAVIGATION
   ============================================ */
.luxury-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 4rem;
    background: rgba(10, 10, 10, 0.85);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--glass-border);
    transition: all 0.5s var(--ease-luxury);
}

.luxury-nav.scrolled {
    padding: 1rem 4rem;
    background: rgba(10, 10, 10, 0.95);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
}

.nav-logo {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 900;
    color: var(--champagne-gold);
    letter-spacing: 0.2em;
    text-shadow: 0 0 30px rgba(212, 175, 55, 0.5);
}

.nav-logo-container {
    display: flex;
    align-items: center;
    height: 60px;
}

.nav-logo-svg {
    height: 50px;
    width: auto;
    filter: drop-shadow(0 0 20px rgba(212, 175, 55, 0.3));
    transition: all 0.4s var(--ease-luxury);
}

.nav-logo-svg:hover {
    filter: drop-shadow(0 0 30px rgba(212, 175, 55, 0.6));
    transform: scale(1.05);
}

.nav-links {
    display: flex;
    gap: 3rem;
}

.nav-link {
    font-family: var(--font-display);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--platinum);
    text-decoration: none;
    letter-spacing: 0.15em;
    position: relative;
    transition: all 0.4s var(--ease-luxury);
    padding: 0.5rem 0;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--champagne-gold), transparent);
    transform: translateX(-50%);
    transition: width 0.4s var(--ease-luxury);
}

.nav-link:hover {
    color: var(--champagne-gold);
    text-shadow: 0 0 20px rgba(212, 175, 55, 0.5);
}

.nav-link:hover::after {
    width: 100%;
}

/* Mobile Menu Toggle */
.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
}

.mobile-menu-toggle span {
    width: 25px;
    height: 2px;
    background: var(--champagne-gold);
    transition: all 0.3s ease;
    border-radius: 2px;
}

.mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
}

.mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
}

.mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
}

/* ============================================
   MAIN CONTAINER
   ============================================ */
.menu-container {
    position: relative;
    z-index: 10;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
}

/* ============================================
   HERO SECTION
   ============================================ */
.hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    margin-top: 80px;
    will-change: transform;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0, 0, 0);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.hero-parallax-layers {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.parallax-layer {
    position: absolute;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
}

.layer-back {
    background: radial-gradient(ellipse at 50% 50%, rgba(212, 175, 55, 0.05) 0%, transparent 60%);
    animation: layerFloat 30s ease-in-out infinite;
}

.layer-mid {
    background: radial-gradient(ellipse at 30% 70%, rgba(183, 110, 121, 0.05) 0%, transparent 50%);
    animation: layerFloat 25s ease-in-out infinite reverse;
}

.layer-front {
    background: radial-gradient(ellipse at 70% 30%, rgba(128, 0, 32, 0.05) 0%, transparent 50%);
    animation: layerFloat 20s ease-in-out infinite;
}

@keyframes layerFloat {
    0%, 100% {
        transform: translate3d(0, 0, 0) scale(1);
    }
    50% {
        transform: translate3d(20px, -20px, 0) scale(1.03);
    }
}

.brand-identity {
    text-align: center;
    position: relative;
    padding: 4rem 2rem;
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0, 0, 0);
}

.brand-ornament {
    width: 150px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--champagne-gold), transparent);
    margin: 0 auto;
    position: relative;
}

.brand-ornament.top {
    margin-bottom: 3rem;
    animation: ornamentGlow 3s ease-in-out infinite;
}

.brand-ornament.bottom {
    margin-top: 3rem;
    animation: ornamentGlow 3s ease-in-out infinite 1.5s;
}

@keyframes ornamentGlow {
    0%, 100% {
        opacity: 0.5;
        box-shadow: 0 0 10px var(--champagne-gold);
    }
    50% {
        opacity: 1;
        box-shadow: 0 0 30px var(--champagne-gold);
    }
}

.brand-ornament::before,
.brand-ornament::after {
    content: 'â—†';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: var(--champagne-gold);
    font-size: 0.75rem;
    text-shadow: 0 0 20px var(--champagne-gold);
}

.brand-ornament::before { left: -20px; }
.brand-ornament::after { right: -20px; }

.brand-name {
    font-family: var(--font-display);
    font-size: clamp(3rem, 10vw, 7rem);
    font-weight: 900;
    letter-spacing: 0.3em;
    margin: 2rem 0;
    line-height: 1.2;
    position: relative;
    padding: 1.5rem 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
}

.brand-word {
    display: flex;
    justify-content: center;
    align-items: center;
}

.brand-name::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 120%;
    height: 100%;
    background: radial-gradient(ellipse at center, rgba(212, 175, 55, 0.08) 0%, transparent 70%);
    border-radius: 50%;
    z-index: -1;
    animation: brandGlowPulse 4s ease-in-out infinite;
}

@keyframes brandGlowPulse {
    0%, 100% {
        opacity: 0.3;
        transform: translateX(-50%) scale(1);
    }
    50% {
        opacity: 0.6;
        transform: translateX(-50%) scale(1.05);
    }
}

.brand-name .letter {
    display: inline-block;
    color: transparent;
    background: linear-gradient(135deg, 
        var(--champagne-gold) 0%, 
        var(--pearl-white) 50%, 
        var(--champagne-gold) 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    text-shadow: none;
    filter: drop-shadow(0 0 20px rgba(212, 175, 55, 0.4))
            drop-shadow(0 4px 8px rgba(0, 0, 0, 0.5));
    animation: 
        letterFloat 4s ease-in-out infinite,
        gradientShift 6s ease-in-out infinite;
    animation-delay: calc(var(--i) * 0.1s);
    will-change: transform;
    position: relative;
    transform-style: preserve-3d;
}

.brand-name .letter::after {
    content: attr(data-letter);
    position: absolute;
    top: 3px;
    left: 3px;
    color: rgba(212, 175, 55, 0.15);
    z-index: -1;
    -webkit-background-clip: unset;
    background-clip: unset;
    filter: blur(2px);
}

.brand-word:nth-child(1) .letter:nth-child(1) { --i: 0; }
.brand-word:nth-child(1) .letter:nth-child(2) { --i: 1; }
.brand-word:nth-child(1) .letter:nth-child(3) { --i: 2; }
.brand-word:nth-child(1) .letter:nth-child(4) { --i: 3; }
.brand-word:nth-child(1) .letter:nth-child(5) { --i: 4; }
.brand-word:nth-child(1) .letter:nth-child(6) { --i: 5; }
.brand-word:nth-child(1) .letter:nth-child(7) { --i: 6; }
.brand-word:nth-child(2) .letter:nth-child(1) { --i: 7; }
.brand-word:nth-child(2) .letter:nth-child(2) { --i: 8; }
.brand-word:nth-child(2) .letter:nth-child(3) { --i: 9; }
.brand-word:nth-child(2) .letter:nth-child(4) { --i: 10; }

@keyframes letterFloat {
    0%, 100% {
        transform: translate3d(0, 0, 0) rotateY(0deg);
    }
    50% {
        transform: translate3d(0, -12px, 0) rotateY(5deg);
    }
}

@keyframes gradientShift {
    0%, 100% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
}

.brand-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin: 2rem 0;
}

.divider-ornament {
    width: 80px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--champagne-gold), transparent);
}

.divider-diamond {
    font-size: 1.5rem;
    color: var(--champagne-gold);
    text-shadow: 0 0 20px var(--champagne-gold);
    animation: diamondRotate 4s linear infinite;
}

@keyframes diamondRotate {
    0%, 100% {
        transform: rotate(0deg) scale(1);
    }
    50% {
        transform: rotate(180deg) scale(1.2);
    }
}

.brand-tagline {
    font-family: var(--font-body);
    font-size: clamp(0.875rem, 2vw, 1.25rem);
    font-weight: 400;
    letter-spacing: 0.4em;
    color: var(--platinum);
    margin: 2rem 0;
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
}

.tagline-word {
    display: inline-block;
    opacity: 0;
    animation: wordFadeIn 1s ease-out forwards;
}

.tagline-word:nth-child(1) { animation-delay: 0.5s; }
.tagline-word:nth-child(2) { animation-delay: 0.8s; }
.tagline-word:nth-child(3) { animation-delay: 1.1s; }
.tagline-word:nth-child(4) { animation-delay: 1.4s; }

@keyframes wordFadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.scroll-indicator {
    margin-top: 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    animation: scrollFadeIn 1s ease-out 2s forwards;
    cursor: pointer;
    padding: 1rem;
    transition: all 0.3s var(--ease-luxury);
}

.scroll-indicator:hover {
    transform: translateY(-5px);
}

.scroll-indicator:hover .scroll-text {
    color: var(--pearl-white);
    text-shadow: 0 0 25px rgba(212, 175, 55, 0.8);
}

.scroll-indicator:hover .scroll-arrow {
    animation: arrowBounceHover 0.6s ease-in-out infinite;
}

@keyframes scrollFadeIn {
    to {
        opacity: 1;
    }
}

.scroll-text {
    font-family: var(--font-display);
    font-size: 0.75rem;
    letter-spacing: 0.3em;
    color: var(--champagne-gold);
    transition: all 0.3s var(--ease-luxury);
}

.scroll-arrow {
    font-size: 1.5rem;
    color: var(--champagne-gold);
    animation: arrowBounce 2s ease-in-out infinite;
    text-shadow: 0 0 15px rgba(212, 175, 55, 0.5);
}

@keyframes arrowBounce {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(10px);
    }
}

@keyframes arrowBounceHover {
    0%, 100% {
        transform: translateY(0) scale(1);
    }
    50% {
        transform: translateY(15px) scale(1.1);
    }
}

/* ============================================
   MENU SECTIONS
   ============================================ */
.menu-content {
    padding: var(--space-2xl) 0;
}

.menu-section {
    margin-bottom: var(--space-2xl);
    opacity: 0;
    transform: translateY(50px);
    transition: all 1s var(--ease-smooth);
}

.menu-section.visible {
    opacity: 1;
    transform: translateY(0);
}

.section-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 3rem 0;
}

.section-number {
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 900;
    color: var(--champagne-gold);
    opacity: 0.2;
    letter-spacing: 0.1em;
}

.section-ornamental-line {
    flex: 1;
    max-width: 200px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--champagne-gold), transparent);
    position: relative;
}

.section-ornamental-line::before,
.section-ornamental-line::after {
    content: '';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    background: var(--champagne-gold);
    border-radius: 50%;
    box-shadow: 0 0 10px var(--champagne-gold);
}

.section-ornamental-line::before { left: 20%; }
.section-ornamental-line::after { right: 20%; }

.section-title {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.title-main {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    color: var(--champagne-gold);
    letter-spacing: 0.2em;
    text-shadow: 0 0 20px rgba(212, 175, 55, 0.3);
}

.title-subtitle {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, 1.5rem);
    font-weight: 400;
    color: var(--platinum);
    letter-spacing: 0.3em;
    font-style: italic;
}

/* ============================================
   MENU ITEMS
   ============================================ */
.menu-items {
    display: grid;
    gap: 3rem;
}

.menu-item {
    background: linear-gradient(135deg, 
        rgba(26, 26, 26, 0.6) 0%,
        rgba(42, 37, 32, 0.4) 100%);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
    padding: 3rem;
    position: relative;
    overflow: hidden;
    transition: all 0.4s var(--ease-smooth);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    will-change: transform;
    transform: translateZ(0); /* Force GPU acceleration */
}

.menu-item::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.05) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s var(--ease-luxury);
    pointer-events: none;
    will-change: opacity;
}

.menu-item:hover::before {
    opacity: 1;
}

.menu-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        transparent 0%, 
        rgba(212, 175, 55, 0.1) 50%, 
        transparent 100%);
    transition: left 0.6s var(--ease-luxury);
    will-change: left;
}

.menu-item:hover::after {
    left: 100%;
}

.menu-item:hover {
    transform: translateY(-8px);
    border-color: rgba(212, 175, 55, 0.4);
    box-shadow: 
        0 20px 60px rgba(0, 0, 0, 0.4),
        0 0 40px rgba(212, 175, 55, 0.2),
        inset 0 1px 0 rgba(212, 175, 55, 0.2);
}

.item-luxury-badge {
    position: absolute;
    top: 2rem;
    right: 2rem;
    font-family: var(--font-display);
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--champagne-gold);
    padding: 0.5rem 1rem;
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
    z-index: 10;
}

.item-number {
    position: absolute;
    top: 2rem;
    left: 2rem;
    font-family: var(--font-display);
    font-size: 4rem;
    font-weight: 900;
    color: var(--champagne-gold);
    opacity: 0.05;
    line-height: 1;
    z-index: 1;
}

.item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 5;
    gap: 1rem;
}

.item-name {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.name-main {
    font-family: var(--font-accent);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: var(--pearl-white);
    letter-spacing: 0.05em;
    line-height: 1.2;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
}

.name-ornament {
    font-size: 1.5rem;
    color: var(--champagne-gold);
    text-shadow: 0 0 15px rgba(212, 175, 55, 0.6);
    transition: all 0.3s var(--ease-bounce);
    will-change: transform;
}

.menu-item:hover .name-ornament {
    transform: rotate(180deg) scale(1.2);
}

.item-price {
    font-size: 1.25rem;
    color: var(--champagne-gold);
    letter-spacing: 0.2em;
    text-shadow: 0 0 15px rgba(212, 175, 55, 0.5);
    white-space: nowrap;
}

.item-description {
    font-family: var(--font-body);
    font-size: 1.125rem;
    line-height: 1.9;
    color: rgba(248, 246, 240, 0.85);
    position: relative;
    z-index: 5;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    transition: color 0.4s var(--ease-luxury);
}

.menu-item:hover .item-description {
    color: rgba(248, 246, 240, 1);
}

/* Luxury tier specific styling */
.menu-item[data-luxury="royal"] {
    background: linear-gradient(135deg, 
        rgba(128, 0, 32, 0.2) 0%,
        rgba(42, 37, 32, 0.4) 100%);
}

.menu-item[data-luxury="royal"]:hover {
